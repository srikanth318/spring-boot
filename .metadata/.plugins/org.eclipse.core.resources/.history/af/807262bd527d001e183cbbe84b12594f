package com.test;

import java.util.Arrays;
import java.util.List;
import java.util.Map;
import java.util.Map.Entry;
import java.util.stream.Collectors;

public class Test {

	public static void main(String[] args) {
		
		List<Integer> list = Arrays.asList(1,2,3,2,3,3,3);
		
		
		Map<Integer, Long> collect = list.stream().collect(Collectors.groupingBy(s->s,Collectors.counting()));
		
		Entry<Integer, Long> entry = collect.entrySet().stream().max(Map.Entry.comparingByValue()).get();

		System.out.println(entry.getKey()+" "+entry.getValue());
 
	}

}
